#!/usr/bin/env ruby
require "../lib/game_logic"

include GameLogic

class Player
    attr_accessor :name 
    def initialize(name)
        @name = name
    end
end

game_on = true
until game_on == false
    puts "Player 1 please enter your name"
    player1 = gets.chomp
    puts "Player 2 please enter your name"
    player2 = gets.chomp
    game_board = [1, 2, 3, 4, 5, 6, 7, 8, 9]
    display_board(game_board)
    count = 0
    while count < 9
        puts "Player 1 select the number (1-9) for your move"
        p1_move = gets.chomp.to_i
        if valid_input(p1_move) == false
            puts 'Please enter a valid move, a number between 1 to 9'
            next
        end
        puts repeat_move(p1_move, game_board)
        game_board[p1_move-1] = "O"
        count += 1
        display_board(game_board)
        puts "Player 2 select the number (1-9) for your move"
        p2_move = gets.chomp.to_i
        puts valid_input(p2_move)
        puts repeat_move(p2_move, game_board)
        game_board[p2_move-1] = "X"
        count += 1
        display_board(game_board)
        # If either player meets the 'WIN condition' (horizontal, vertical, or diagonal), display player1 wins or player2 wins
        # if # condition == WIN
        #     puts "#{player1} wins!" # or
        #     puts "#{player2} wins!"
        #     game = false # (to stop the loop)
        # end
        # Otherwise display the 'DRAW condition'
        if count == 9
            puts "It's a draw game"
            break
        end
    end
    # puts "#{winner} you won!"
    puts "Play again? press \"Y\" or press any other key to quit"
    input = gets.chomp.upcase
    if input == "Y"
        game_on = true
    end
    break if input != "Y"
end
